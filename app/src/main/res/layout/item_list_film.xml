<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item_list_film"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="18dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/iv_img_film"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:contentDescription="logo_list_film"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/film" />

        <TextView
            android:id="@+id/tv_judul_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:text="Nama Film"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_img_film"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tahun_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:text="2022"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_img_film"
            app:layout_constraintTop_toBottomOf="@+id/tv_judul_film" />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:contentDescription="rating"
            android:src="@drawable/star_rate"
            app:layout_constraintStart_toEndOf="@+id/iv_img_film"
            app:layout_constraintTop_toBottomOf="@+id/tv_tahun_film" />

        <TextView
            android:id="@+id/tv_rating_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="9,2"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/iv_star"
            app:layout_constraintTop_toBottomOf="@+id/tv_tahun_film" />

        <TextView
            android:id="@+id/tv_deskripsi_film"
            android:layout_width="189dp"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/poppins"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/iv_img_film"
            app:layout_constraintTop_toBottomOf="@+id/tv_tahun_film" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>